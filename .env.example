# Environment Configuration for KortekStream
# Copy this file to .env and configure for your environment

# Environment
ENVIRONMENT=production
DEBUG=False

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database (Production - PostgreSQL)
DB_NAME=kortekstream
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis Cache
REDIS_URL=redis://127.0.0.1:6379/1

# API Configuration
API_BASE_URL=http://apigatway.humanmade.my.id:8080
API_TIMEOUT=15
API_MAX_RETRIES=3
API_BACKOFF_FACTOR=1.5
API_CIRCUIT_BREAKER_THRESHOLD=10
API_CIRCUIT_BREAKER_TIMEOUT=300

# Cache Timeouts (seconds)
CACHE_TIMEOUT_SHORT=60
CACHE_TIMEOUT_MEDIUM=300
CACHE_TIMEOUT_LONG=3600
CACHE_TIMEOUT_VERY_LONG=86400

# Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Email Configuration (for error reporting)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Security Settings
FORCE_HTTPS=True
SECURE_SSL_REDIRECT=True

# Performance
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880